[MASTER]
ignore=migrations,

[BASIC]
function-rgx=[a-z_][a-z0-9_]{2,40}$
function-name-hint=[a-z_][a-z0-9_]{2,40}$

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=18

# Ignore imports when computing similarities.
ignore-imports=yes

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

[DESIGN]
# Minimum number of public methods for a class (see R0903)
min-public-methods=1

# Maximum number of attributes for a class (see R0902)
max-attributes=20

# Maximum number of public methods for a class (see R0904)
max-public-methods=50

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of arguments for function / method
max-args=10

# Maximum number of nested blocks
max-nested-blocks=8

# Maximum number of statements
max-statements=55

[EXCEPTIONS]
overgeneral-exceptions=None

[MESSAGES CONTROL]
disable=C0103, E1101, E0110, E0401, E0611, E731, E0704, F403, I0011, R0204, R0801, R0903, W0141, W0221, W0613, W1401
